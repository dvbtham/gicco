@model UserInfoVm
@{
    ViewData["Title"] = Localizer["Account Information"];
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="/" title="@Localizer[" Return to home"]">@Localizer["Home"]</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@ViewBag.Title</span>
        </div>
        <!-- ./breadcrumb -->
        <div class="page-content page-order">

            <div class="row">
                <!-- Left colunm -->
                <div class="column col-xs-12 col-sm-3" id="left_column">
                    @Html.Partial("_AccountMenu")
                </div>
                <!-- ./left colunm -->
                <div class="col-md-9">
                    <h2 class="heading-bordered">@ViewData["Title"]</h2>
                    <div class="row">
                        <div class="col-md-8">
                            <form asp-area="Core" asp-controller="Manage" asp-action="UserInfo" method="post" role="form">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-md-2 col-form-label">@Localizer["Email"]</label>
                                    <div class="col-md-10">
                                        <input asp-for="Email" readonly class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="FullName" class="col-md-2 col-form-label">@Localizer["FullName"]</label>
                                    <div class="col-md-10">
                                        <input asp-for="FullName" class="form-control" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-md-2 col-md-10">
                                        <button type="submit" class="btn btn-outline-primary">@Localizer["Save"]</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
