@model List<Gicco.Module.Catalog.ViewModels.ProductSummary>

@if (Model.Count > 0)
{
    <div class="owl-carousel owl-best-sell" data-nav="false" data-margin="0" data-autoplayTimeout="1000" data-autoplay="true" data-autoplayHoverPause="true" data-items="1">
        <ul class="products-block best-sell">
            @foreach (var item in Model)
            {
                <li>
                    <div class="products-block-left">
                        <a href="~/@item.Slug">
                            <img src="@item.Image" alt="@item.Name">
                        </a>
                    </div>
                    <div class="products-block-right">
                        <p class="product-name">
                            <a href="~/@item.Slug">@item.Name</a>
                        </p>
                        <p class="product-price">@item.CalculatedProductPrice.Price.ToString("C")</p>
                        <div class="product-star">
                            @{
                                int unstars = 5;
                            }
                            @for (int i = 1; i <= item.RatingAverage - 1; i++)
                            {
                                <i class="fa fa-star"></i>
                                { unstars--; }
                            }
                            @for (int i = 1; i <= unstars; i++)
                            {
                                <i class="fa fa-star-o"></i>
                            }
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
}
