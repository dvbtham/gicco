@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="/" title="@Localizer[" Return to home"]">@Localizer["Home"]</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@ViewBag.Title</span>
        </div>
        <!-- ./breadcrumb -->
        <div class="page-content page-order">
            <div class="row">
                <!-- Left colunm -->
                <div class="column col-xs-12 col-sm-3" id="left_column">
                    @Html.Partial("_AccountMenu")
                </div>
                <div class="col-md-9">
                    <form asp-area="Core" asp-controller="Manage" asp-action="ChangePassword" method="post">
                        <h2 class="heading-bordered">@Localizer["Change Password Form"]</h2>
                        <div asp-validation-summary="All" class="text-danger mb-10"></div>
                        <div class="form-group row">
                            <label asp-for="OldPassword" class="col-md-3 col-form-label"></label>
                            <div class="col-md-6">
                                <input asp-for="OldPassword" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NewPassword" class="col-md-3 col-form-label"></label>
                            <div class="col-md-6">
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-md-3 col-form-label"></label>
                            <div class="col-md-6">
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-6">
                                <button type="submit" class="btn btn-outline-primary">Change password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
