@model IEnumerable<Gicco.Module.Catalog.ViewModels.CategoryMenuItem>

@inject IViewLocalizer Localizer
@foreach (var item in Model)
{
    if (item.ChildItems.Any())
    {
        <li class="dropdown">
            <a href="/@item.Slug" class="dropdown-toggle">@item.Name</a>
            <ul class="dropdown-menu container-fluid">
                <li class="block-container">
                    <ul class="block">
                        @foreach (var childItem in item.ChildItems)
                        {
                            <li class="link_container">
                                <a href="/@childItem.Slug">@childItem.Name&nbsp;<i class="fa fa-chevron-right"></i></a>
                                <ul class="block">
                                    <li class="link_container">
                                        <a href="/@childItem.Slug">@childItem.Name&nbsp;<i class="fa fa-chevron-right"></i></a>
                                    </li>
                                    <li class="link_container">
                                        <a href="/@childItem.Slug">@childItem.Name&nbsp;<i class="fa fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li><a href="/@item.Slug">@item.Name</a></li>
    }
}
