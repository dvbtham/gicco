@{
    ViewData["Title"] = Localizer["Wish List Sharing Information"];
}
<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="/" title="@Localizer[" Return to home"]">@Localizer["Home"]</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@ViewBag.Title</span>
        </div>
        <!-- ./breadcrumb -->
        <div class="page-content page-order">
            <div class="row">
                <!-- Left colunm -->
                <div class="column col-xs-12 col-sm-3" id="left_column">
                    @Html.Partial("_AccountMenu")
                </div>

                <div class="col-md-9">
                    <h2 class="heading-bordered">@Localizer["Wish List Sharing Information"]</h2>
                    <div class="mb-10">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
                    <form asp-area="WishList" asp-controller="WishList" asp-action="Share" method="POST">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">@Localizer["Email Address"]</label>
                            <div class="col-sm-8"><input class="form-control" type="email" name="EmailAddress" /></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">@Localizer["Message"]</label>
                            <div class="col-sm-8"><textarea class="form-control" rows="5" cols="50" name="Message"></textarea></div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <button type="submit" class="btn btn-outline-primary share-wishlist">@Localizer["Share"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
</div>
