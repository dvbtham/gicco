@model Gicco.Module.Core.ViewModels.UserAddressFormViewModel
@{
    ViewData["Title"] = Localizer["Create address"];
}
<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="/" title="@Localizer["Return to home"]">@Localizer["Home"]</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@ViewBag.Title</span>
        </div>
        <!-- ./breadcrumb -->
        <div class="page-content page-order">
            <div class="row">
                <!-- Left colunm -->
                <div class="column col-xs-12 col-sm-3" id="left_column">
                    @Html.Partial("_AccountMenu")
                </div>
                <div class="col-md-9">
                    <h2 class="heading-bordered">@Localizer["Create Address"]</h2>
                    <form asp-area="Core" asp-controller="UserAddress" asp-action="Create" method="POST">
                        @Html.Partial("_AddressForm", Model)
                    </form>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
</div>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/modules/core/user-address.js"></script>
}
