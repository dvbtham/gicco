@{
    ViewData["Title"] = Localizer["Reset password confirmation"];
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="/" title="@Localizer["Return to Home"]">@Localizer["Home"]</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">@ViewData["Title"]</span>
        </div>
        <!-- ./breadcrumb -->
        
        <div class="page-content">
            <div class="row">
                <div class="col-sm-12">
                    <p>
                        Your password has been reset. Please <a asp-area="Core" asp-controller="Account" asp-action="Login">Click here to log in</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
